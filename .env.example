# ==========================================
# EQUITIE INVESTOR PORTAL - ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env.local and fill in your values

# ------------------------------------------
# CORE CONFIGURATION
# ------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Equitie Investor Portal"
NEXT_PUBLIC_APP_VERSION=1.1.0

# ------------------------------------------
# SUPABASE CONFIGURATION (Future Integration)
# ------------------------------------------
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your-project-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database Direct Connection (for migrations)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# ------------------------------------------
# FEATURE FLAGS
# ------------------------------------------
# Toggle between mock data and real Supabase
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_SUPABASE=false

# Enable/disable features
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# ------------------------------------------
# DEVELOPMENT SETTINGS
# ------------------------------------------
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_MOCK_DELAY_MS=0
NEXT_PUBLIC_PERFORMANCE_THRESHOLD_MS=500

# ------------------------------------------
# AUTHENTICATION (Future)
# ------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# ------------------------------------------
# EXTERNAL SERVICES (Future)
# ------------------------------------------
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# DocuSign
DOCUSIGN_INTEGRATION_KEY=xxx
DOCUSIGN_SECRET_KEY=xxx
DOCUSIGN_ACCOUNT_ID=xxx

# SendGrid
SENDGRID_API_KEY=xxx
SENDGRID_FROM_EMAIL=noreply@equitie.com

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=equitie-documents

# ------------------------------------------
# ANALYTICS (Future)
# ------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=xxx
NEXT_PUBLIC_SENTRY_DSN=xxx

# ------------------------------------------
# SECURITY
# ------------------------------------------
# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ------------------------------------------
# DEPLOYMENT
# ------------------------------------------
# Vercel
VERCEL_URL=
VERCEL_ENV=development

# Railway/Render/etc
PORT=3000
HOST=0.0.0.0