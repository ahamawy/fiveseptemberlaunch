# ==========================================
# FEATURE MODULE CONFIGURATION
# ==========================================
# Configuration for modular feature development

# ------------------------------------------
# FEATURE FLAGS
# ------------------------------------------
# Master switch for feature module system
NEXT_PUBLIC_ENABLE_FEATURES=true

# Individual feature toggles
NEXT_PUBLIC_FEATURE_DEALS_READ=true
NEXT_PUBLIC_FEATURE_DEALS_CRUD=true
NEXT_PUBLIC_FEATURE_TRANSACTIONS=true
NEXT_PUBLIC_FEATURE_DOCUMENTS=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true

# ------------------------------------------
# FEATURE DEVELOPMENT MODE
# ------------------------------------------
# Show feature development tools in UI
NEXT_PUBLIC_SHOW_FEATURE_DEVTOOLS=true

# Enable feature hot-reloading
NEXT_PUBLIC_FEATURE_HOT_RELOAD=true

# ------------------------------------------
# PERFORMANCE TARGETS
# ------------------------------------------
# Feature performance monitoring
NEXT_PUBLIC_FEATURE_P95_TARGET_MS=150
NEXT_PUBLIC_FEATURE_P99_TARGET_MS=300

# ------------------------------------------
# FEATURE DATA MODE
# ------------------------------------------
# Override main app's data mode for features
# Options: inherit | mock | supabase | mcp
NEXT_PUBLIC_FEATURE_DATA_MODE=inherit

# ------------------------------------------
# FEATURE TESTING
# ------------------------------------------
# Enable feature integration tests
NEXT_PUBLIC_RUN_FEATURE_TESTS=true

# Feature test timeout (ms)
NEXT_PUBLIC_FEATURE_TEST_TIMEOUT=5000