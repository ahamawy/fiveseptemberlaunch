# ==========================================
# DEVELOPMENT ENVIRONMENT - DEFAULT VALUES
# ==========================================
# These are safe defaults for local development

# ------------------------------------------
# CORE CONFIGURATION
# ------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="EquiTie Investor Portal"
NEXT_PUBLIC_APP_VERSION=1.1.0

# ------------------------------------------
# SUPABASE CONFIGURATION (Not Used Yet)
# ------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://placeholder.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=placeholder-anon-key
SUPABASE_SERVICE_KEY=placeholder-service-key
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ------------------------------------------
# FEATURE FLAGS
# ------------------------------------------
# Using mock data by default
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_SUPABASE=false

# Development features enabled
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Modular feature system
NEXT_PUBLIC_ENABLE_FEATURES=true
NEXT_PUBLIC_FEATURE_DEALS_READ=true

# ------------------------------------------
# DEVELOPMENT SETTINGS
# ------------------------------------------
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_MOCK_DELAY_MS=0
NEXT_PUBLIC_PERFORMANCE_THRESHOLD_MS=500

# ------------------------------------------
# AUTHENTICATION (Mocked)
# ------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-key-change-in-production

# ------------------------------------------
# MOCK USER SESSION
# ------------------------------------------
NEXT_PUBLIC_MOCK_USER_ID=1
NEXT_PUBLIC_MOCK_USER_NAME="John Doe"
NEXT_PUBLIC_MOCK_USER_EMAIL="john.doe@example.com"
NEXT_PUBLIC_MOCK_USER_ROLE="investor"

# ------------------------------------------
# EXTERNAL SERVICES (Disabled in Dev)
# ------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_mock
STRIPE_SECRET_KEY=sk_test_mock
STRIPE_WEBHOOK_SECRET=whsec_mock

# ------------------------------------------
# ANALYTICS (Disabled in Dev)
# ------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# ------------------------------------------
# SECURITY (Relaxed for Dev)
# ------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# ------------------------------------------
# DEPLOYMENT
# ------------------------------------------
PORT=3000
HOST=0.0.0.0

# ------------------------------------------
# CACHING INFRASTRUCTURE
# ------------------------------------------
# Redis Configuration (for development, using in-memory cache)
USE_REDIS=false
REDIS_URL=redis://localhost:6379
CACHE_WARMUP=false
CACHE_DEFAULT_TTL=300

# Monitoring
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_MONITORING_INTERVAL=5000